<Page x:Class="CustomerLogger.ProblemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
	  Title="ProblemPage"
      d:DesignWidth="669.254"
      d:DesignHeight="483.022"
      Height="688"
      Width="1200">

    <Grid KeyUp="Grid_KeyUp">
        <Button x:Name="NextButton"  Content="Next" HorizontalAlignment="Right" Margin="0,0,20,29" VerticalAlignment="Bottom" Width="160" Height="85" Click="NextButton_Click" FontSize="26.667"/>
        <RadioButton x:Name="HardwareButton" Content="Hardware" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,188,0,0" VerticalAlignment="Top" FontSize="34.667" Click="HardwareButton_Click" Width="511"/>
        <RadioButton x:Name="SoftwareButton" Content="Software" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,235,0,0" VerticalAlignment="Top" FontSize="34.667" Click="SoftwareButton_Click"/>
        <RadioButton x:Name="WirelessButton" Content="Wireless" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,282,0,0" VerticalAlignment="Top" FontSize="34.667" Click="WirelessButton_Click"/>
        <RadioButton x:Name="EmailButton" Content="Email" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,329,0,0" VerticalAlignment="Top" FontSize="34.667" Click="EmailButton_Click"/>
        <RadioButton x:Name="PasswordButton" Content="Password" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,376,0,0" VerticalAlignment="Top" FontSize="34.667" Click="PasswordButton_Click"/>
        <RadioButton x:Name="Other" Content="Other" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,477,0,0" VerticalAlignment="Top" FontSize="34.667" RenderTransformOrigin="0.513,-0.055" Click="Other_Click"/>
        <TextBlock x:Name="ProblemText" Margin="62,118,61,0" TextWrapping="Wrap" Text="Please select the option that best describes your problem:" VerticalAlignment="Top" FontSize="40"/>
        <RadioButton x:Name="RentalButton" Content="Rent/Extend/Return Rental" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,426,0,0" VerticalAlignment="Top" FontSize="34.667" Click="RentalButton_Click"/>

    </Grid>
</Page>
