<Page x:Class="CustomerLogger.ProblemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
	  Title="ProblemPage"
      d:DesignWidth="669.254"
      d:DesignHeight="483.022"
      Height="688"
      Width="1200">

    <Grid KeyUp="Grid_KeyUp">
        <Button x:Name="NextButton"  Content="Next" HorizontalAlignment="Right" Margin="0,0,20,29" VerticalAlignment="Bottom" Width="160" Height="85" Click="NextButton_Click" FontSize="26.667"/>
        <RadioButton x:Name="HardwareButton" Content="Hardware" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,184,0,0" VerticalAlignment="Top" FontSize="34.667" Width="511"/>
        <RadioButton x:Name="SoftwareButton" Content="Software" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,233,0,0" VerticalAlignment="Top" FontSize="34.667"/>
        <RadioButton x:Name="WirelessButton" Content="Wireless" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,280,0,0" VerticalAlignment="Top" FontSize="34.667"/>
        <RadioButton x:Name="EmailButton" Content="Email" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,329,0,0" VerticalAlignment="Top" FontSize="34.667"/>
        <RadioButton x:Name="PasswordButton" Content="Password" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,376,0,0" VerticalAlignment="Top" FontSize="34.667"/>
        <RadioButton x:Name="Other" Content="Other" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="450,429,0,0" VerticalAlignment="Top" FontSize="34.667" RenderTransformOrigin="0.513,-0.055"/>
        <TextBlock x:Name="ProblemText" Margin="62,118,61,0" TextWrapping="Wrap" Text="Please select the option that best describes your problem:" VerticalAlignment="Top" FontSize="40"/>
        <TextBox x:Name="descriptionTextBox" Margin="323,521,324,59" TextWrapping="Wrap" Text="Shortly describe the problem you are having ..." FontSize="21.333" SelectionBrush="#FF5AADFF" KeyUp="descriptionTextBox_KeyUp" KeyDown="descriptionTextBox_KeyDown" PreviewKeyDown="descriptionTextBox_PreviewKeyDown"/>
        <Label x:Name="requiredLabel" Content="*" HorizontalContentAlignment="Right" Margin="265,501,876,135" FontSize="42.667" Background="#00000000" Foreground="Red"/>

    </Grid>
</Page>
