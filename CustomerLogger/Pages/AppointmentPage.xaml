<Page x:Class="CustomerLogger.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomerLogger.Pages"
      mc:Ignorable="d" 
      d:DesignWidth="669.254"
      d:DesignHeight="483.022"
      Height="688"
      Width="1200"
      Title="AppointmentPage">

    <Grid KeyUp="Grid_KeyUp">
        <Label x:Name="apptLabel" Content="Do you have an appointment with us today?" FontWeight="DemiBold" Margin="194,199,194,0" VerticalAlignment="Top" FontSize="40" Height="66"/>
        <RadioButton x:Name="yesRadioButton" Content="Yes" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="537,310,0,0" FontSize="34.667" Click="yesRadioButton_Click" VerticalAlignment="Top"/>
        <RadioButton x:Name="noRadioButton" Content="No" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="537,360,0,0" FontSize="34.667" Click="noRadioButton_Click" VerticalAlignment="Top"/>
        <Button x:Name="nextButton" Content="Next" Margin="0,0,30,29" Click="SubmitButton_Click" FontSize="26.667" HorizontalAlignment="Right" Width="160" Height="80" VerticalAlignment="Bottom"/>
        <Label x:Name="descLabel" Content="Please select &quot;No&quot; if you have not setup an appointment at cougtech.setmore.com" Margin="106,249,107,379" FontSize="26.667"/>
    </Grid>
</Page>
