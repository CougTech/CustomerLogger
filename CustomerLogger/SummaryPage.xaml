        <TextBlock x:Name="DeviceLabel" Margin="315,365,658,0" TextWrapping="Wrap" Text="Device:" VerticalAlignment="Top" FontSize="50" FontWeight="Bold"/>
        <TextBlock x:Name="Device" HorizontalAlignment="Left" Margin="651,365,0,0" TextWrapping="Wrap" Text="A Device" VerticalAlignment="Top" FontSize="48"/>
        <TextBlock x:Name="ProblemLabel" Margin="315,461,658,0" TextWrapping="Wrap" Text="Problem:" VerticalAlignment="Top" FontSize="50" FontWeight="Bold"/>
        <TextBlock x:Name="Problem" HorizontalAlignment="Left" Margin="651,461,0,0" TextWrapping="Wrap" Text="A Problem" VerticalAlignment="Top" FontSize="48"/>
        <Label x:Name="label" Content="Summary" HorizontalAlignment="Left" Margin="441,120,0,0" VerticalAlignment="Top" Width="303" Height="110" FontSize="64" FontStyle="Italic"/>

    </Grid>
